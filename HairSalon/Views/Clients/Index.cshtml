@{
  Layout = "_Layout";
}

<div class="container">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Perfect Look</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home Page</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/stylists/new">Add New Client</a>
      </li>
    </ul>
    </div>
  </nav>
  <div class="jumbotron jumbotron-fluid">
    <h4 class="display-4">Perfect Look Database Management</h4>
    <p class="lead">View All Clients Here.</p>
    <img src="~/imgs/HairTools.jpg" alt="Hair Tools" class="jumbotron-image">
  </div>
  <br>
  @if (Model.Count == 0)
  {
    <p class="element-align">No Client In Database! Start by Adding one.</p>
  }

  <br>
  <div class="row">
  @foreach (var clients in Model)
    {
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><a href='/clients/@client.GetClientId()'>@client.GetClientName()</a></h5>
            <h5 class="card-title">@client.GetClientName()</h5>
          </div>
        </div>
      </div>
    }
  </div>
</div>
