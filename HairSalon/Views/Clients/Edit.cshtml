@{
  Layout = "_Layout";
}
<div class="container">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Perfect Look</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home Page</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/stylists/@Model["stylist"].GetId()">Add New Client For @Model["stylist"].GetName()</a>
      </li>
    </ul>
    </div>
  </nav>
  <div class="jumbotron">
    <h4 class="display-4">Perfect Look Database Management</h4>
    <p class="lead">Modify Client Details</p>
    <img src="~/imgs/HairTools.jpg" alt="Hair Tools" class="jumbotron-image">
  </div>
  <h4><strong>Edit Details For</Strong>: @Model["client"].GetClientName()</h4>
  <form action="/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetClientId()" method="post">
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="newName">Client New Name:</label>
        <input type="text" class="form-control" id="newName" name="newName" placeholder="Firstname Lastname" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="newPhone">Client New Phone Number:</label>
        <input type="text" class="form-control" id="newPhone" name="newPhone" placeholder="XXX-XXX-XXXX" required>
      </div>
    </div>
    <button type="submit" class="btn btn-danger btn-md">Update Client</button>
  </form>
</div>
<br>
