@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model Stylist
<div class="container">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Perfect Look</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home Page</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/stylists/@Model.GetId()">Add New Client</a>
      </li>
    </ul>
    </div>
  </nav>
  <div class="jumbotron">
    <h4 class="display-4">Perfect Look Database Management</h4>
    <p class="lead">Modify Stylist Name</p>
    <img src="~/imgs/HairTools.jpg" alt="Hair Tools" class="jumbotron-image">
  </div>
  <h4 class="align"><strong>Edit Details For</Strong>: @Model.GetName()</h4>
  <form action="/stylists/@Model.GetId()/update" method="post">
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="name">Stylist New Name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Firstname Lastname" required>
      </div>
    </div>
    <button type="submit" class="btn btn-danger btn-md">Update Stylist</button>
  </form>
</div>
<br>
