
@using HairSalon.Models
@model Stylist

@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Perfect Look!</h1>
    <img src="~/img/HairTools.jpg" alt="Hair Tools" class="jumbotron-image">
    <p class="lead">Perfect Look Stylists Management</p>
  <div>
    <form action="/stylists" method="post">
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="stylistName">Enter Stylist Name:</label>
          <input type="text" class="form-control" id="stylistName" name="stylistName" placeholder="firstname lastname" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary" style="margin-left: 45%">Get Count !</button>
    </form>
  </div>
